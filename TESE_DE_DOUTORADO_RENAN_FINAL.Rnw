base_crime <- readRDS("rdss/base_crimevis_2016_pop_ok.rds")
base_crime %>% 
  spread(Crime, Qtd) %>% 
  select(Mun, CodIBGE, Ano, Populacao, Roubo, Furto)
@
\caption{Exemplo de base não-tidy: múltiplos crimes nas colunas}
\label{out:nao_tidy_crime}
\end{routput}

\begin{routput}
<<echo=false>>=
